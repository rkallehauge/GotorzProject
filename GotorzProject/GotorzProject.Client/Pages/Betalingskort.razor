@page "/Betalingskort"
@rendermode InteractiveWebAssembly
@inject NavigationManager Navigation

<PageTitle>Credit card Details</PageTitle>

<h3>Update your Credit card info here</h3>

<div id="Startside">
    <div id="nav">
        <div class="customform">
            <button type="button" class="btn btn-secondary btn-sm" id="fafa" @onclick="NavigateToPersonalDetails"> Personal details</button>
        </div>
        <div class="customform">
            <button type="button" class="btn btn-secondary btn-sm" id="fafa" @onclick="NavigateToOrderHistory"> Order history</button>
        </div>
        <div class="customform">
            <button type="button" class="btn btn-secondary btn-sm" id="fafa" @onclick="NavigateToCard"> Credit card details</button>
        </div>
        <div class="customform">
            <button type="button" class="btn btn-secondary btn-sm" id="fafa" @onclick="NavigateToSupport"> Support</button>
        </div>
        <div class="customform">
            <button type="button" class="btn btn-secondary btn-sm" id="fafa" @onclick="NavigateToAbout"> About us</button>
        </div>
    </div>
    <div id="Kasse">
        <h3>Address & Payment</h3>
        <div class="mb-3" id="checked">
            <Switch @ref="switch1" Value="switch1Value" class="test" Label="Credit Card 1" ValueExpression="() => switch1Value" ValueChanged="OnSwitch1Changed" />
            <Switch @ref="switch2" Value="switch2Value" Class="test" Label="Credit Card 2" ValueExpression="() => switch2Value" ValueChanged="OnSwitch2Changed" />
        </div>
        <div>
            <h3> Credit card details</h3>
            <p> Here you can update your credit card details</p>
            <div id="border">
                <Button label class="form-control1">Credit Card 1 </Button>
                <Button label class="form-control1">Credit Card 2 </Button>
            </div>
        </div>
    </div>
</div>

    @code {

        private Switch switch1 = default!;
        private Switch switch2 = default!;
        private bool switch1Value = false;
        private bool switch2Value = true;

        private void OnSwitch1Changed(bool value)
        {
            switch1Value = value;
            if (switch1Value)
            {
                switch2Value = false;
            }
        }

        private void OnSwitch2Changed(bool value)
        {
            switch2Value = value;
            if (switch2Value)
            {
                switch1Value = false;
            }
        }

        private void NavigateToPersonalDetails()
        {
            Navigation.NavigateTo("/Kundeside");
        }

        private void NavigateToOrderHistory()
        {
            Navigation.NavigateTo("/OrderHistory");
        }

        private void NavigateToCard()
        {
            Navigation.NavigateTo("/CreditCard");
        }

        private void NavigateToSupport()
        {
            Navigation.NavigateTo("/Support");
        }

        private void NavigateToAbout()
        {
            Navigation.NavigateTo("/AboutUs");
        }
    }
 
<style>
 
    h3{
        text-align:center;
    }
 
    button{
        width:100%;
        height:100%;
    }

    label {
        border-block: solid;
        border-radius: var(--bs-border-radius);
    }

    #checked{
        margin-right:45px;
    }
 
    #Startside{
        display:flex;
        margin-top:10px;
    }
 
    #fafa {
        margin: 5px;
    }
 
    #nav{
        display:block;
        width:250px;
        height:310px; 
        margin-right: 20px;
        margin-top:25px;
    }

    #Kasse{
        align-content:center;
        width: 500px;
        height: 200px;
        margin-left:50px;
        margin-top: 35px;
        text-align:center;
        align-content:center;
        border:solid;
        border-radius: var(--bs-border-radius);
    }

    #border{
        background-color: whitesmoke;
        border:solid;
        border-radius: var(--bs-border-radius);
    }
 
    .customform{
        display: flex;
        width: 100%;
        margin-top:5px;
        padding: 0.375rem 0.75rem;
        font-size: 1rem;
        font-weight: 400;
        line-height: 1.5;
        color: #6c757d;
        background-color: #6c757d;
        background-clip: padding-box;
        border-radius: var(--bs-border-radius);
    }

    .form-control1 {
        display: block;
        width: 100%;
        padding: 0.375rem 0.75rem;
        font-size: 1rem;
        font-weight: 400;
        line-height: 1.5;
        color: var(--bs-body-color);
        appearance: none;
        background-color: var(--bs-body-bg);
        background-clip: padding-box;
        border-radius: var(--bs-border-radius);
        transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
    }

    .test{
        margin-left:5px;
    }
 
</style>