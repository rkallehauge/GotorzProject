@page "/Support"
@rendermode InteractiveWebAssembly
@inject NavigationManager Navigation

<PageTitle>Support</PageTitle>

<h3>Here you can get help</h3>
<h5>You can chat with one of our amazing employees to receive help</h5>

<div id="Startside">
    <div id="nav">
        <div class="customform">
            <button type="button" class="btn btn-secondary btn-sm" id="fafa" @onclick="NavigateToPersonalDetails"> Personal details</button>
        </div>
        <div class="customform">
            <button type="button" class="btn btn-secondary btn-sm" id="fafa" @onclick="NavigateToOrderHistory"> Order history</button>
        </div>
        <div class="customform">
            <button type="button" class="btn btn-secondary btn-sm" id="fafa" @onclick="NavigateToCard"> Credit card details</button>
        </div>
        <div class="customform">
            <button type="button" class="btn btn-secondary btn-sm" id="fafa" @onclick="NavigateToSupport"> Support</button>
        </div>
        <div class="customform">
            <button type="button" class="btn btn-secondary btn-sm" id="fafa" @onclick="NavigateToAbout"> About us</button>
        </div>
    </div>
    <div>
        <div>
            <Syncfusion.Blazor.InteractiveChat.SfChatUI Height="600px" Width="600px" Messages="Messages">
                <EmptyChatTemplate>
                    <div style="text-align: center; margin-top: 50px;">
                        <h4><span class="fa fa-comment-o"></span></h4>
                        <h5>No Messages Yet</h5>
                        <p style="font-size: 16px; margin-top: 20px;">Send a message in the chat, to receive help</p>
                    </div>
                </EmptyChatTemplate>
            </Syncfusion.Blazor.InteractiveChat.SfChatUI>
        </div>
    </div>
</div>

@code {
    private static UserModel ProductManager = new UserModel() { ID = "User1", User = "Rashid" };

    private static List<ChatMessage> Messages = new List<ChatMessage>()
    {
        new ChatMessage() { ID = "1", Author = ProductManager, Text = "Hello, how can I help you today?", Timestamp = DateTime.Now.AddMinutes(-5) },
        new ChatMessage() { ID = "2", Author = ProductManager, Text = "I'm sorry to hear that, what is your order number?", Timestamp = DateTime.Now.AddMinutes(-2) },
        new ChatMessage() { ID = "3", Author = ProductManager, Text = "Thank you, I will look into it", Timestamp = DateTime.Now },
    };

    private void NavigateToPersonalDetails()
    {
        Navigation.NavigateTo("/Kundeside");
    }

    private void NavigateToOrderHistory()
    {
        Navigation.NavigateTo("/OrderHistory");
    }

    private void NavigateToCard()
    {
        Navigation.NavigateTo("/CreditCard");
    }

    private void NavigateToSupport()
    {
        Navigation.NavigateTo("/Support");
    }

    private void NavigateToAbout()
    {
        Navigation.NavigateTo("/AboutUs");
    }
}

<style>
    h3, h5 {
        text-align: center;
    }

    #Startside {
        display: flex;
        margin-top: 10px;
    }

    #fafa {
        margin: 5px;
        width: 100%;
        height: 100%;
    }

    #nav {
        display: block;
        width: 250px;
        height: 310px;
        margin-right: 20px;
        margin-top: 25px;
    }

    .customform {
        display: flex;
        width: 100%;
        margin-top: 5px;
        padding: 0.375rem 0.75rem;
        font-size: 1rem;
        font-weight: 400;
        line-height: 1.5;
        color: #6c757d;
        background-color: #6c757d;
        background-clip: padding-box;
        border-radius: var(--bs-border-radius);
    }
</style>
