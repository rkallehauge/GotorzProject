        <a href="/upload-image" style="color: #007bff; text-decoration: none;">Tilføj et nyt teammedlem</a>
    </p>
    <div style="display: flex; justify-content: center; gap: 20px; flex-wrap: wrap;">
        @foreach (var member in TeamMembers)
        {
            <div style="text-align: center; background-color: #2a2a2a; padding: 10px; border-radius: 10px; width: 150px;">
                <img src="@member.ImagePath" alt="@member.Name" style="border-radius: 50%; width: 100px; height: 100px; object-fit: cover;">
                <p style="margin: 5px 0;">@member.Name</p>
                <button style="background-color: #007bff; color: white; border: none; padding: 5px 10px; border-radius: 5px;">@member.Role</button>
            </div>
        }
    </div>

